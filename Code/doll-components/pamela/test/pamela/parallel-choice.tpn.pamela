(defpclass parallel-choice-tpn [plant]
  :meta {:version "0.2.0"
         :depends [[plant "0.2.0"]]
         :doc "Parallel and Choice, each with 2 Activities"}
  :methods [(defpmethod simple-parallel-tpn
              {:doc "Simple Parallel TPN"}
              []
              (sequence
                (parallel
                  (plant.bounded)
                  (plant.unbounded))
                (choose
                  (choice (plant.bounded))
                  (choice (plant.unbounded))))
              )])
