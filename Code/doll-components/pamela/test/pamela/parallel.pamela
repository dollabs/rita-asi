(defpclass plant []
           :meta {:doc "The Plant API"}

           :methods [(defpmethod bounded
                                 {:doc    "Bounded"
                                  :bounds [1 5]} [])
                     (defpmethod unbounded
                                 {:doc "Unbounded"}
                                 [])
                     ])

(defpclass parallel-tpn [plant]
           :meta {:doc "Simple Parallel with 2 Activities"}
           :methods [(defpmethod simple-parallel-tpn
                                 {:doc "Simple Parallel TPN"}
                                 []
                                 (parallel
                                   (plant.bounded)
                                   (plant.unbounded))
                                 )]
           )
