(defpclass quadcopter-plant []
           :meta {:version "0.2.0"
                  :doc "The Plant API"}
           :methods [(defpmethod wp1
                                 {:doc    "Waypoint 1"
                                  :bounds [10 50]}
                                 [])
                     (defpmethod wp2
                                 {:doc    "Waypoint 2"
                                  :bounds [10 50]}
                                 [])
                     (defpmethod wp3
                                 {:doc    "Waypoint 3"
                                  :bounds [10 50]}
                                 [])
                     (defpmethod wp4
                                 {:doc    "Waypoint 4"
                                  :bounds [10 50]}
                                 [])
                     (defpmethod wp5
                                 {:doc    "Waypoint 5"
                                  :bounds [10 50]}
                                 [])
                     ])

(defpclass waypoints-test [quadcopter-plant]
           :meta {:version "0.2.0"
                  :depends [[quadcopter-plant "0.2.0"]]
                  :doc "Quadcopter test waypoints"}
           :methods [(defpmethod waypoints
                                 {:doc "QC waypoints"}
                                 []
                                 (sequence
                                   (quadcopter-plant.wp1)
                                   (quadcopter-plant.wp2)
                                   (quadcopter-plant.wp3)
                                   (quadcopter-plant.wp4)
                                   (quadcopter-plant.wp5)
                                   )
                                 )])

;; Compile to create htn and tpn files
;; pamela -i test/pamela/waypoint.pamela -o waypoint -t "(main.main)" htn
(defpclass main []
          :fields {qc (quadcopter-plant)
                   wp (waypoints-test qc)}
          :methods [(defpmethod main []
                                (sequence (wp.waypoints)))])
