(defpclass ask-always []
  :meta {:version "0.2.0"
         :doc "ask example with no time bounds"}
  :fields {a (lvar)}
  :methods [(defpmethod always-on
              {:doc "ensure field a is always 1.0"}
              []
              (ask (= a 1.0)))])
